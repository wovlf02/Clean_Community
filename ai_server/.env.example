# ======================
# 서버 설정
# ======================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# ======================
# 모델 설정
# ======================
# 모델 파일 경로 (프로젝트 루트 기준 상대 경로)
MODEL_PATH=./ai-model/models

# HuggingFace 모델명 (토크나이저 로드용)
KCELECTRA_MODEL=beomi/KcELECTRA-base
SOONGSIL_MODEL=snunlp/KR-SBERT-V40K-klueNLI-augSTS
ROBERTA_MODEL=klue/roberta-base

# ======================
# 앙상블 가중치
# ======================
KCELECTRA_WEIGHT=0.35
SOONGSIL_WEIGHT=0.33
ROBERTA_WEIGHT=0.32

# ======================
# 추론 설정
# ======================
MAX_LENGTH=128
BATCH_SIZE=32

# ======================
# CORS 설정 (Next.js 연동)
# ======================
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ======================
# 로깅
# ======================
LOG_LEVEL=INFO
